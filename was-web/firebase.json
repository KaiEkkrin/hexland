{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=300"
          }
        ]
      },
      {
        "source": "/app.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/assets/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/app",
        "destination": "/app.html"
      },
      {
        "source": "/app/**",
        "destination": "/app.html"
      },
      {
        "source": "/adventure/**",
        "destination": "/app.html"
      },
      {
        "source": "/map/**",
        "destination": "/app.html"
      },
      {
        "source": "/invite/**",
        "destination": "/app.html"
      },
      {
        "source": "/shared",
        "destination": "/app.html"
      },
      {
        "source": "/all",
        "destination": "/app.html"
      },
      {
        "source": "/login",
        "destination": "/app.html"
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "emulators": {
    "firestore": {
      "host": "0.0.0.0",
      "port": "8080"
    },
    "functions": {
      "host": "0.0.0.0",
      "port": "5001"
    },
    "hosting": {
      "host": "0.0.0.0",
      "port": "3400"
    },
    "ui": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": "4000"
    },
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "storage": {
      "host": "0.0.0.0",
      "port": 9199
    }
  },
  "storage": {
    "rules": "storage.rules"
  }
}
